<div class="wrapper">
	<div class="sidebar" data-color="orange">
		<div class="logo">
			<a href="#" class="simple-text">QUEST ADMIN</a>
		</div>
		<div class="sidebar-wrapper">
			<ul class="nav">
				<li><a href="/"><i class="material-icons">exit_to_app</i><p>Exit Admin</p></a></li>
				<li class="active"><a href="/admin"><i class="material-icons">dashboard</i><p>Dashboard</p></a></li>
				<li><a href="/admin/users"><i class="material-icons">content_paste</i><p>Manage Users</p></a></li>
			</ul>
		</div>
	</div>
	<div class="main-panel">
		<nav class="navbar navbar-expand-lg navbar-transparent  navbar-absolute fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                     <a class="navbar-brand">Welcome back admin (<%= current_user.name %>)</a>
                </div>
                <%= form_with model: @query, class: "navbar-form navbar-left" do |form| %>
                    <div class="form-group  is-empty">
                        <%= text_field_tag :name, "",placeholder: "Search for..", class:"form-control" %>
                        <span class="material-input"></span>
                    </div>
                    <button type="submit" class="btn btn-white btn-round btn-just-icon">
                        <i class="material-icons">search</i>
                        <div class="ripple-container"></div>
                    </button>
                <% end %>              
            </div>
        </nav>
        <div class="content">           
             <div class="container fluid">
                <h1 style="color:teal">BestSellers</h1>
                <div class="card" style="margin-bottom: -20px; padding: 10px;">
                    <div class="row">
                        <div class="col-md-2" style="text-align: center;">
                            <div class="list-group" id="myList" role="tablist">
                                <a class="list-group-item list-group-item-action active" id="qoo10-list">Qoo10</a>
                                <a class="list-group-item list-group-item-action" id="lazada-list">Lazada</a>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="tab-content">
                                <div class="tab-pane active" id="qoo10" role="tabpanel">
                                    <ol>
                                    <% @qoo10_popular_products.each do |item| %>
                                            <li><%= item.name %></li>
                                    <% end %>
                                    </ol>
                                </div>
                                <div class="tab-pane" id="lazada" role="tabpanel">
                                    <ol>
                                    <% @lazada_popular_products.each do |item| %>
                                            <li><%= item.name %></li>
                                    <% end %>
                                    </ol>
                                </div>
                            </div>                                
                        </div>
                    </div>
                </div>
            </div>       
        	<div id="results" style="margin-top: 50px"></div>
		</div>
	</div>
</div>

<script type="text/javascript">
  $(".navbar-form").submit(function( ) {
    $('#results').html("loading results. Please wait patiently...")
  });

$('#qoo10-list')[0].addEventListener("click",function(){
    $('#lazada')[0].style.display = "none";
    $('#lazada-list')[0].classList.remove("active");
    $('#qoo10-list')[0].classList.add("active");
    $('#qoo10')[0].style.display = "block";
  })

  $('#lazada-list')[0].addEventListener("click",function(){
    $('#qoo10')[0].style.display = "none";
    $('#qoo10-list')[0].classList.remove("active");
    $('#lazada-list')[0].classList.add("active");
    $('#lazada')[0].style.display = "block";
  })
</script>