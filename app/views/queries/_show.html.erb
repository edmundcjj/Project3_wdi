<p><strong>Searching for: </strong><%= @query.name %></p>

<% @parsedAll.each do |site| %>
<h2><%= site[:platform] %></h2>
<table>
    <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Price</th>
        <th>Url</th>
        <th>Favourites</th>
    </tr>

    <% site[:results].each do |item| %>
    <tr>
        <td><%= item.id %></td>
        <td><img src= <%= item["img"] %> height="100px" width="100px"><span style="width:300px; height:100px; overflow:auto; display:inline-block;"><%= item.name %></span></td>
        <td><%= item.price %></td>
        <td> <a href="<%= item["url"] %>">Click here to buy</a> </td>
        <td><%= link_to 'Add to Favourites', result_favourites_path(item.name), method: :post %></td>
    </tr>
<% end %>
</table>
<% end %>