<div class="container">
    <p><strong>Searching for: </strong><%= @query.name %></p>

    <% @parsedAll.each do |site| %>
        <!-- Grid row -->
        <div class="row">
            <% site[:results].each do |item| %>     
                <!-- Grid column -->
                <div class="col-md-4 mb-r d-flex align-items-stretch">
                    <!--Card-->
                    <div class="card">
                        <!--Card image-->
                        <div class="view overlay">
                            <div style="width:200px; height:200px; margin:0 auto">
                                <img class="card-img-top" src= <%= item["img"] %>
                                <a href="#">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>
                        </div>
                        <!--Card content-->
                        <div class="card-body">
                            <!--Title-->
                            <h4 class="card-title"><%= item.name %></h4>
                            <!--Text-->
                            <p class="card-text"><strong>Price:</strong><%= item.price %></p>
                            <a href="<%= item["url"] %> class="btn btn-primary">Click to buy</a>
                            
                        </div>
                    </div>
                    <!--/.Card--> 
                </div>
            <% end %>
        </div>
    <% end %>
</div>    
