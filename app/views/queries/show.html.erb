
<p>
  <strong>Searching for: </strong><%= @query.name %>
</p>

<table>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Image</th>
    <th>Price</th>
  </tr>

   <% @parsedResults.each do |item| %>
  <tr>
  	<td><%= item["id"] %></td>
    <td><%= item["name"] %></td>
    <td><img src= <%= item["image"] %>><span style="width:200px; height:100px; overflow:auto; display:inline-block;"></span></td>
    <td><%= item["price"] %></td>
  </tr>
  <% end %>
